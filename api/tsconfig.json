{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES6",
        "noEmitOnError": true,
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "declarations.d.ts"],
    "exclude": ["node_modules"]
}